{
    "name": "stekel/kodi",
    "type": "library",
    "description": "Library for interacting with a kodi instance",
    "keywords": [
        "stekel",
        "kodi"
    ],
    "homepage": "https://github.com/stekel/kodi",
    "license": "MIT",
    "require": {
        "php" : "~5.6|~7.0",
        "illuminate/support": "~5",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3"
    },
    "autoload": {
        "psr-4": {
            "stekel\\Kodi\\": "src",
            "stekel\\Kodi\\Tests\\Helpers\\": "tests/Helpers"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "stekel\\Kodi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "stekel\\Kodi\\KodiServiceProvider"
            ],
            "aliases": {
                "Kodi": "stekel\\Kodi\\KodiFacade"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
